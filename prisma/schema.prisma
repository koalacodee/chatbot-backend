generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid()) @db.Uuid
  name          String
  email         String         @unique
  password      String         @db.Char(97)
  role          Role
  departmentId  String?        @map("department_id") @db.Uuid
  department    Department?    @relation(fields: [departmentId], references: [id])
  refreshTokens RefreshToken[]
  conversations Conversation[]
  tickets       Ticket[]

  @@map("users")
}

model RefreshToken {
  id        String    @id @default(uuid()) @db.Uuid
  token     String    @unique
  userId    String    @map("user_id") @db.Uuid
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  @@map("refresh_tokens")
}

model Department {
  id              String           @id @default(uuid()) @db.Uuid
  name            String
  questions       Question[]
  knowledgeChunks KnowledgeChunk[]
  admins          User[]
  tickets         Ticket[]

  @@map("departments")
}

model Question {
  id               String          @id @default(uuid()) @db.Uuid
  text             String
  answer           String?
  departmentId     String          @map("department_id") @db.Uuid
  department       Department      @relation(fields: [departmentId], references: [id])
  knowledgeChunkId String?         @map("knowledge_chunk_id") @db.Uuid
  knowledgeChunk   KnowledgeChunk? @relation(fields: [knowledgeChunkId], references: [id])

  @@map("questions")
}

model KnowledgeChunk {
  id              String           @id @default(uuid()) @db.Uuid
  content         String
  departmentId    String           @map("department_id") @db.Uuid
  department      Department       @relation(fields: [departmentId], references: [id])
  pointId         String?          @map("point_id") @db.Uuid
  questions       Question[]
  retrievedChunks RetrievedChunk[]

  @@index([pointId])
  @@map("knowledge_chunks")
}

model Conversation {
  id        String    @id @default(uuid()) @db.Uuid
  userId    String?   @map("user_id") @db.Uuid
  user      User?     @relation(fields: [userId], references: [id])
  messages  Message[]
  startedAt DateTime  @default(now()) @map("started_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  endedAt   DateTime? @map("ended_at")
  guestId   String?   @map("guest_id") @db.Uuid
  isDeleted Boolean   @default(false) @map("is_deleted")

  @@map("conversations")
}

model Message {
  id             String          @id @default(uuid()) @db.Uuid
  content        String
  role           MessageRole     @map("role")
  conversationId String          @map("conversation_id") @db.Uuid
  conversation   Conversation    @relation(fields: [conversationId], references: [id])
  retrievedChunk RetrievedChunk?
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  @@map("messages")
}

model RetrievedChunk {
  id               String         @id @default(uuid()) @db.Uuid
  messageId        String         @unique @map("message_id") @db.Uuid
  message          Message        @relation(fields: [messageId], references: [id])
  knowledgeChunkId String         @map("knowledge_chunk_id") @db.Uuid
  knowledgeChunk   KnowledgeChunk @relation(fields: [knowledgeChunkId], references: [id])
  score            Float
  retrievedAt      DateTime       @default(now()) @map("retrieved_at")

  @@map("retrieved_chunks")
}

model Ticket {
  id              String       @id @default(uuid()) @db.Uuid
  userId          String?      @map("user_id") @db.Uuid
  user            User?        @relation(fields: [userId], references: [id])
  guestId         String?      @map("guest_id") @db.Uuid
  question        String
  departmentId    String       @map("department_id") @db.Uuid
  department      Department   @relation(fields: [departmentId], references: [id])
  pointId         String?      @map("point_id") @db.Uuid
  ticketCode      String       @unique @map("ticket_code")
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")
  status          TicketStatus @default(PENDING)
  isAutoGenerated Boolean      @default(true) @map("is_auto_generated")
  answer TicketAnswer?

  @@index([pointId, isAutoGenerated])
  @@map("tickets")
}

model TicketAnswer {
  id              String       @id @default(uuid()) @db.Uuid
  ticketId String @db.Uuid @unique @map("ticket_id")
  ticket Ticket @relation(fields: [ticketId], references: [id])
  content String
  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  @@map("ticket_answers")
}

enum TicketStatus {
  PENDING  @map("pending")
  IN_PROGRESS @map("in_progress")
  RESOLVED @map("resolved")
  REJECTED @map("rejected")
}

enum Role {
  MANAGER  @map("manager")
  ADMIN    @map("admin")
  EMPLOYEE @map("employee")
}

model PushSubscription {
  id             String    @id @default(uuid()) @db.Uuid
  userId         String    @map("user_id")
  endpoint       String
  expirationTime DateTime? @map("expiration_time")
  keys           Json
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("push_subscriptions")
}

enum MessageRole {
  USER      @map("user")
  ASSISTANT @map("assistant")
}
