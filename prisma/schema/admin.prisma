model Admin {
  id                           String                     @id @map("id") @db.Uuid
  userId                       String                     @unique @map("user_id") @db.Uuid
  user                         User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  promotions                   Promotion[]
  tasksReviewed                TaskSubmission[]           @relation("ReviewerOfTaskSubmission")
  adminResolutions             EmployeeRequest[]          @relation("AdminResolutions")
  questions                    Question[]
  supportTicketAnswersAuthored SupportTicketAnswer[]      @relation("AnswererOfSupportTicketAnswer")
  tasksPerformed               TaskSubmission[]           @relation("PerformerOfTaskSubmission")
  assignedTasks                Task[]                     @relation("AssignerOfTask")
  submittedTaskDelegations     TaskDelegationSubmission[] @relation("PerformerOfTaskDelegationSubmission")
  reviewedTaskDelegations      TaskDelegationSubmission[] @relation("ReviewerOfTaskDelegationSubmission")

  @@map("admins")
}
