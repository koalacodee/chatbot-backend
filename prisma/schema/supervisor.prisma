model Supervisor {
  id                           String                     @id @map("id") @db.Uuid
  departments                  Department[]
  permissions                  AdminPermissions[]
  userId                       String                     @unique @map("user_id") @db.Uuid
  user                         User                       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignerTasks                Task[]                     @relation("AssignerOfTask")
  employees                    Employee[]
  promotions                   Promotion[]
  tasksReviewed                TaskSubmission[]           @relation("ReviewerOfTaskSubmission")
  employeeRequests             EmployeeRequest[]          @relation("SupervisorRequests")
  questions                    Question[]
  supportTicketAnswersAuthored SupportTicketAnswer[]      @relation("AnswererOfSupportTicketAnswer")
  tasksPerformed               TaskSubmission[]           @relation("PerformerOfTaskSubmission")
  drivers                      Driver[]
  delegations                  TaskDelegation[]           @relation("DelegatorOfTaskDelegation")
  createdAt                    DateTime                   @default(now()) @map("created_at")
  updatedAt                    DateTime                   @updatedAt @map("updated_at")
  submittedTaskDelegations     TaskDelegationSubmission[] @relation("PerformerOfTaskDelegationSubmission")
  reviewedTaskDelegations      TaskDelegationSubmission[] @relation("ReviewerOfTaskDelegationSubmission")

  @@index([userId])
  @@map("supervisors")
}

enum AdminPermissions {
  VIEW_ANALYTICS           @map("view_analytics")
  MANAGE_SUB_DEPARTMENTS   @map("manage_sub_departments")
  MANAGE_PROMOTIONS        @map("manage_promotions")
  VIEW_USER_ACTIVITY       @map("view_user_activity")
  MANAGE_STAFF_DIRECTLY    @map("manage_staff_directly")
  MANAGE_TASKS             @map("manage_tasks")
  MANAGE_ATTACHMENT_GROUPS @map("manage_attachment_groups")
}
